<div class= "container mt-5">
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>  <%= check_box_tag 'completed', '1', @task.completed %>
  <%= label_tag 'completed', 'Completed' %></p>

<button  class= "btn btn-primary"> <%= link_to("edit task", edit_task_path(@task), class: "text-white") %></button>
<%# <%= link_to("edit task", "/tasks/#{@task.id}/edit") %>
<p><%= link_to '🗑️', task_path(@task), class: 'btn btn-light', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }  %></p>
<%= link_to("<- Back to task list", tasks_path) %>
</div>
